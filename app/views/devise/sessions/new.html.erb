<div class = "container mt-5 text-center col-12 col-md-6 col-sm-4 p-5 bg-white rounded shadow-sm">
  <h2 class = "m-3">Bienvenido al Portal CRM</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  class: "btn btn-primary",
                  label: 'ContraseÃ±a',
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: 'Recordar mis datos', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "btn btn-primary my-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
